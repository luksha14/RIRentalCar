<Page x:Class="RIRentalCar.CarListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RIRentalCar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CarListPage">

    <Grid Margin="10">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="Lista Automobila" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <ItemsControl x:Name="CarsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,10" Padding="10" Background="LightGray">
                                <StackPanel>
                                    <TextBlock Text="{Binding Model}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Year, StringFormat=Year: {0}}" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding PricePerDay, StringFormat=Price per day: {0:C}}" Margin="0,0,0,5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Gumb za povratak na glavni izbornik -->
            <Button Content="Back to Main Menu" DockPanel.Dock="Bottom" Height="40" Margin="0,10,0,0" Click="BackToMainMenu_Click"/>
        </DockPanel>
    </Grid>
</Page>

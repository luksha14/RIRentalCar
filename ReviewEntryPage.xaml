<Page x:Class="RIRentalCar.ReviewEntryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RIRentalCar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Input Review" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <TextBlock Text="Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Rate (1-5):" Margin="0,0,0,5"/>
            <ComboBox x:Name="RatingComboBox" Margin="0,0,0,20">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>

            <TextBlock Text="Coment (optional):" Margin="0,0,0,5"/>
            <TextBox x:Name="CommentTextBox" Height="100" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <Button Content="Save Review" Click="SaveReviewButton_Click" Height="40" Width="200" HorizontalAlignment="Center"/>
            <Button Content="Back to Main Menu" Margin="5" Click="BackToMainMenu_Click"/>
        </StackPanel>
    </Grid>
</Page>

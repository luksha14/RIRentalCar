<UserControl x:Class="RIRentalCar.ReviewListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RIRentalCar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Reviews:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="ReviewListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Name, StringFormat='Name: {0}'}" FontStyle="Italic"/>
                                <TextBlock Text="{Binding Rating, StringFormat='Rate: {0}'}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Comment, StringFormat='Comment: {0}'}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Back to Main Menu" Click="BackToMainMenu_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
